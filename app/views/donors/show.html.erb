<%- model_class = Donor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:about_info) %>:</strong></dt>
  <dd><%= @donor.about_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:home_address) %>:</strong></dt>
  <dd><%= @donor.home_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country_of_origin) %>:</strong></dt>
  <dd><%= @donor.country_of_origin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reason_to_help) %>:</strong></dt>
  <dd><%= @donor.reason_to_help %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @donor.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              donors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_donor_path(@donor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              donor_path(@donor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
